{
  "manifest_version": 3,
  "name": "小红书笔记采集器",
  "version": "1.0.0",
  "description": "采集小红书笔记数据并写入飞书多维表格",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.xiaohongshu.com/*",
    "https://open.feishu.cn/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.xiaohongshu.com/discovery/item/*",
        "https://www.xiaohongshu.com/explore/*",
        "https://www.xiaohongshu.com/user/profile/*/post/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "小红书笔记采集器",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    },
    "persistent": true
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}